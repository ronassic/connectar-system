{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2021",
    "strict": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "incremental": true,
    "paths": {
        "@entities/*": ["entities/*"],
        "@services/*": ["services/*"],
        "@modules/*": ["modules/*"],
        "@controllers/*": ["controllers/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}

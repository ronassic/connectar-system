{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2021",
    "strict": true,
    "strictPropertyInitialization": false,
    "jsx": "react-jsx",
    "allowJs": true,    
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@entities/*": ["entities/*"],
      "@services/*": ["services/*"],
      "@modules/*": ["modules/*"],
      "@controllers/*": ["controllers/*"],
      "@decorators/*": ["decorators/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts"]
}
